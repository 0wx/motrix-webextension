{
  "name": "Motrix chrome integration",
  "version": "1.0.2",
  "description": "Chrome extension for Motrix download manager",
  "manifest_version": 2,
  "permissions": ["storage", "downloads"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/images/16.png",
      "32": "assets/images/32.png",
      "48": "assets/images/48.png",
      "128": "assets/images/128.png"
    }
  },
  "icons": {
    "16": "assets/images/16.png",
    "32": "assets/images/32.png",
    "48": "assets/images/48.png",
    "128": "assets/images/128.png"
  }
}
